    <Color x:Key="HeartColor">#C62D2E</Color>
    <Style x:Key="HeartToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
        <Setter Property="UseSystemFocusVisuals" Value="True" />
        <Setter Property="FocusVisualMargin" Value="-3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid x:Name="RootGrid">
                        <Ellipse
                            x:Name="OuterCircle"
                            Width="32"
                            Height="32"
                            Fill="Black"
                            RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="OuterScale" ScaleX="0" ScaleY="0" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse
                            x:Name="InnerCircle"
                            Width="32"
                            Height="32"
                            Fill="White"
                            RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="InnerScale" ScaleX="0" ScaleY="0" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse
                            Name="DropBig1"
                            Width="5"
                            Height="5"
                            Fill="{StaticResource HeartColor}"
                            Opacity="0">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="DropBig1Trans" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse
                            Name="DropBig2"
                            Width="5"
                            Height="5"
                            Fill="{StaticResource HeartColor}"
                            Opacity="0">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="DropBig2Trans" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse
                            Name="DropBig3"
                            Width="5"
                            Height="5"
                            Fill="{StaticResource HeartColor}"
                            Opacity="0">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="DropBig3Trans" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse
                            Name="DropBig4"
                            Width="5"
                            Height="5"
                            Fill="{StaticResource HeartColor}"
                            Opacity="0">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="DropBig4Trans" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse
                            Name="DropBig5"
                            Width="5"
                            Height="5"
                            Fill="{StaticResource HeartColor}"
                            Opacity="0">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="DropBig5Trans" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse
                            Name="DropBig6"
                            Width="5"
                            Height="5"
                            Fill="{StaticResource HeartColor}"
                            Opacity="0">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="DropBig6Trans" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse
                            Name="DropBig7"
                            Width="5"
                            Height="5"
                            Fill="{StaticResource HeartColor}"
                            Opacity="0">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="DropBig7Trans" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <FontIcon
                            x:Name="Icon"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="32"
                            Foreground="DimGray"
                            Glyph="&#xE00B;"
                            Opacity="0.4"
                            RenderTransformOrigin="0.5,0.5">
                            <FontIcon.RenderTransform>
                                <ScaleTransform x:Name="IconScale" />
                            </FontIcon.RenderTransform>
                        </FontIcon>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />

                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <DoubleAnimation
                                            BeginTime="0"
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1"
                                            Duration="00:00:00.05">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut" Exponent="7" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="Checked">
                                    <Storyboard>
                                        <ColorAnimation
                                            BeginTime="0"
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="(FontIcon.Foreground).(SolidColorBrush.Color)"
                                            To="{StaticResource HeartColor}" />
                                        <DoubleAnimation
                                            BeginTime="0"
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.6"
                                            Duration="00:00:00.05">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut" Exponent="7" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="CheckedPointerOver">
                                    <Storyboard>
                                        <ColorAnimation
                                            BeginTime="0"
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="(FontIcon.Foreground).(SolidColorBrush.Color)"
                                            To="{StaticResource HeartColor}" />
                                        <DoubleAnimation
                                            BeginTime="0"
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1"
                                            Duration="00:00:00.05">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut" Exponent="7" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="CheckedPressed">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="CheckedDisabled">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="Indeterminate">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="IndeterminatePointerOver">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="IndeterminatePressed">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="IndeterminateDisabled">
                                    <Storyboard />
                                </VisualState>
                                <VisualStateGroup.Transitions>
                                    <VisualTransition
                                        GeneratedDuration="0:0:0.25"
                                        From="PointerOver"
                                        To="CheckedPointerOver">
                                        <Storyboard x:Name="MainTransition">
                                            <DoubleAnimation
                                                BeginTime="0"
                                                Storyboard.TargetName="OuterScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                From="0.3"
                                                To="1.3"
                                                Duration="0:0:0.25" />
                                            <DoubleAnimation
                                                BeginTime="0"
                                                Storyboard.TargetName="OuterScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="0.3"
                                                To="1.3"
                                                Duration="0:0:0.25" />
                                            <ColorAnimation
                                                BeginTime="0"
                                                Storyboard.TargetName="OuterCircle"
                                                Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                From="Red"
                                                To="{StaticResource HeartColor}"
                                                Duration="0:0:0.25" />
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="Icon"
                                                Storyboard.TargetProperty="Opacity"
                                                From="0"
                                                To="1"
                                                Duration="0:0:0.25" />
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                From="0.7"
                                                To="1"
                                                Duration="0:0:0.250" />
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="0.7"
                                                To="1"
                                                Duration="0:0:0.250" />
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="InnerScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                From="0.3"
                                                To="1.5"
                                                Duration="0:0:0.25" />
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="InnerScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="0.3"
                                                To="1.5"
                                                Duration="0:0:0.25" />
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="DropBig1Trans"
                                                Storyboard.TargetProperty="X"
                                                From="0"
                                                To="50"
                                                Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="DropBig1Trans"
                                                Storyboard.TargetProperty="Y"
                                                From="0"
                                                To="0"
                                                Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimationUsingKeyFrames
                                                BeginTime="0"
                                                Storyboard.TargetName="DropBig1"
                                                Storyboard.TargetProperty="Opacity"
                                                Duration="0:0:0.5">
                                                <DiscreteDoubleKeyFrame KeyTime="0" Value="1" />
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.45" Value="1" />
                                                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
                                            </DoubleAnimationUsingKeyFrames>
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="DropBig2Trans"
                                                Storyboard.TargetProperty="X"
                                                From="0"
                                                To="31.19"
                                                Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="DropBig2Trans"
                                                Storyboard.TargetProperty="Y"
                                                From="0"
                                                To="39.07"
                                                Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimationUsingKeyFrames
                                                BeginTime="0"
                                                Storyboard.TargetName="DropBig2"
                                                Storyboard.TargetProperty="Opacity"
                                                Duration="0:0:0.5">
                                                <DiscreteDoubleKeyFrame KeyTime="0" Value="1" />
                                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.45" Value="1" />
                                                <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
                                            </DoubleAnimationUsingKeyFrames>
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="DropBig3Trans"
                                                Storyboard.TargetProperty="X"
                                                From="0"
                                                To="-11.08"
                                                Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                BeginTime="0:0:0.1"
                                                Storyboard.TargetName="DropBig3Trans"
                                                Storyboard.TargetProperty="Y"
                                                From="0"
                                                To="48.75"
