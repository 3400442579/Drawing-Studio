<Page
    x:Class="LearnDraw.Views.Pickers.UnpackResPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:LearnDraw.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LearnDraw.Views.Pickers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <controls:Shadow
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Elevation="16" />
        <Grid
            Padding="{StaticResource PickerPageMargin}"
            Background="{ThemeResource SystemControlAcrylicElementBrush}"
            CornerRadius="4">
            <StackPanel Padding="20" Spacing="20">
                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Please wait to unzip the resource..." />
                <ProgressBar IsIndeterminate="True" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
